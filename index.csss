:body {
      scroll-behavior: smooth;
    }
    .hero {
      background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
      color: white;
      padding: 100px 0;
    }
    .hero h1 {
      font-size: 3rem;
    }
    .project-card {
      transition: transform 0.3s;
    }
    .project-card:hover {
      transform: scale(1.05);
    }
    footer {
      background-color: #343a40;
      color: white;
      padding: 20px 0;
    }